@startuml
left to right direction
skinparam packageStyle rectangle

actor "Cliente (Visitante)" as customer
actor "Lojista (Admin)" as merchant

rectangle "Orçal SaaS Platform" {
    
    package "Storefront (Público)" {
        usecase "Visualizar Loja Personalizada" as UC1
        usecase "Configurar Produto\n(Atributos Dinâmicos)" as UC2
        usecase "Adicionar ao Carrinho" as UC3
        usecase "Solicitar Orçamento\n(Checkout)" as UC4
    }

    package "Dashboard (Privado)" {
        usecase "Fazer Login" as UC5
        usecase "Gerenciar Produtos" as UC6
        usecase "Gerenciar Atributos\n(Opções de Produto)" as UC7
        usecase "Visualizar Pedidos (Leads)" as UC8
    }

    package "Sistema (Backend)" {
        usecase "Resolver Tenant por Domínio" as UC9
        usecase "Enviar Email de Notificação" as UC10
        usecase "Gerar Link WhatsApp" as UC11
    }
}

' Relacionamentos Cliente
customer --> UC1
customer --> UC2
customer --> UC3
customer --> UC4

' Relacionamentos Lojista
merchant --> UC5
merchant --> UC6
merchant --> UC7
merchant --> UC8

' Inclusões e Extensões
UC1 ..> UC9 : <<include>>
UC4 ..> UC10 : <<include>>
UC4 ..> UC11 : <<include>>

@enduml